@model Book;
@{

ViewBag.Title = Model.Title;

//Get the id of the book
int id = Model.Id;

}




<div class="d-flex justify-content-center">

    <div class="detials">
        <h1 class="text-center">@Model.Title</h1>
        <div class="row text-center">
            <div class="col-md-6">
                <img class="" src="/Images/open_book.png" width="350px">

            </div>
            <div class="col-md-6 autherDes">
                <h3>@Model.Author</h3>

                <p class="des">@Model.Description</p>
            </div>

            @*Add to cart button and back button put the buttons on the *@

        <div class="col-md-12">
                <a asp-action="AddToCart" asp-controller="Book"
                   asp-route-id="@Model.Id" class="btn addcartbtn btn-primary float-end">
                    <i class="fa fa-shopping-basket" aria-hidden="true"></i> Add to cart
                </a>

                <a asp-action="Index" asp-controller="Book" class="btn addcartbtn btn-primary float-start">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i> Back to List
                </a>

                </div>

        </div>
    </div>

</div>


<hr />

<h2 class="text-center">You might also like</h2>


<div class="row justify-content-center">
    @foreach (var book in RecommendedBooks.GetRecommendedBooks(id))
    {
        <div class="col-md-3">
            <a href="@Url.Action("Details", "Book", new { id = book.Id })">
                <div class="card re-book-card " style="width: 18em;">
                    <img src="/Images/book.png" class="card-img-top mg-2" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        @*Author*@
                        <p class="card-text ">@book.Author</p>
                        @*Price*@
                        <p class="card-text fw-bold">Price: $@book.Price</p>
                        @*When the user clicks on the button, it should add it to the cart*@

                        <a asp-action="AddToCart" asp-controller="Book"
                           asp-route-id="@book.Id" class="btn addcartbtn btn-primary float-end">
                            <i class="fa fa-shopping-basket" aria-hidden="true"></i> Add to cart
                        </a>

                    </div>
                </div>

            </a>
        </div>
    }
</div>







