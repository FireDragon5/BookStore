@model List<Book_Store_Website.Models.Book>

@{
    ViewData["Title"] = "Search";
}

<h1>Search Books</h1>

<form method="post">
    <div class="form-group">
        <label for="search">Search by Title or Author:</label>
        <input type="text" name="search" id="search" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<hr />

@if (Model != null && Model.Count > 0)
{
    <h2>Search Results:</h2>

    <table class="table text-white">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Description</td>
                    <td>@book.Author</td>
                    <td>@book.Price</td>

                    @*Detials button*@
<td>
                        <a asp-action="Details" asp-controller="Book"
                           asp-route-id="@book.Id" class="btn btn-primary">Details</a>
</td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No books found.</p>
}
